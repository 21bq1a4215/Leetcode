class Solution {
    public boolean threeConsecutiveOdds(int[] arr) {
        int flag=0;
        int k;
        for(int i=0;i<arr.length;i++){
            k=arr[i];
            if (k%2==1)flag++;
            else flag=0;
            if (flag==3) return true;
                
        }
        return false;
        
    }
}
