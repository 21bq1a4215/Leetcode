class Solution:
    def passThePillow(self, n: int, time: int) -> int:
        if time < n:return time +1
        s=1
        f=True
        while time>0:
            time-=1
            if f:
                s+=1
                if s==n:
                    f=False
            elif not f:
                s-=1
                if s==1:
                    f=True
        return s
            
